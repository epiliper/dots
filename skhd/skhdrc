# create desktop and follow focus - uses jq for parsing json (brew install jq)
alt - n : yabai -m space --create; \
sketchybar --update
# destroy desktop
cmd + alt - w : yabai -m space --destroy
#alt - w : yabai -m space --focus prev && yabai -m space recent --destroy

